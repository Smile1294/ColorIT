<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="400.0" prefWidth="507.0" userData="Assign Role" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ProjectCreator.AssignRoleViewContoller">
   <children>
      <HBox prefHeight="227.0" prefWidth="507.0">
         <children>
            <TableView fx:id="TeamMemberTable" prefHeight="171.0" prefWidth="507.0">
              <columns>
                <TableColumn fx:id="TeamMemberColumn" prefWidth="506.0" text="List Of TeamMembers" />
              </columns>
            </TableView>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="59.0" prefWidth="507.0">
         <children>
            <Label text="Choose Role:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="38.0" prefWidth="507.0">
         <children>
            <RadioButton fx:id="Developer" mnemonicParsing="false" onAction="#DeveloperOnClick" text="Developer">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="ProjectOwner" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#ProjectOwnerOnClick" text="Project Owner">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="ScrumMaster" layoutX="154.0" layoutY="10.0" mnemonicParsing="false" onAction="#ScrumMasterOnClick" text="Scrum Master">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </RadioButton>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="73.0" prefWidth="507.0">
         <children>
            <Button mnemonicParsing="false" onAction="#BackOnClick" text="BACK">
               <font>
                  <Font size="16.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
